<p id="notice"><%= notice %></p>

<h1>User books</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Book Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_books.each do |user_books| %>
      <tr>
        <td><%= User.where(id: user_books.user_id).last.username %></td>
        <td><%= Book.where(id: user_books.book_id).last.title %></td>
        <td><%= link_to 'Show', user_books %></td>
        <td><%= link_to 'Edit', edit_user_book_path(user_books) %></td>
        <td><%= link_to 'Destroy', user_books, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

