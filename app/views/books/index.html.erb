<h1> Home Page </h1>
<% if @books.empty? %>
  <p>No books available.</p>
<% else %>
    <table>
        <tr>
            <th>Title</th>
            <th>Author</th>
        </tr>

        <% @books.each do |book| %>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.author %></td>
                <td><%= link_to 'Show', book_path(book) %></td>
                <td><%= link_to 'Edit', edit_book_path(book) %></td>
                <td><%= link_to 'Delete', delete_book_path(book) %></td>
            </tr>
        <% end %>
    </table>
<% end %>

<h2>
    <%= link_to 'Add a new book', new_book_path %>
</h2>